{
  "manifest_version": 3,
  "name": "TTS Extension",
  "version": "1.0",
  "description": "Reads highlighted text out loud using OpenAI TTS API via a Python backend.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TTS Extension"
  }
}